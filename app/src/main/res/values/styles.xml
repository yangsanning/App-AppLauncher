<resources>

    <style name="AppTheme" parent="BaseAppTheme"/>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@color/app_background</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="BaseDialogStyles" parent="@android:style/Theme.Dialog">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowContentOverlay">@color/app_translucent</item>
    </style>

    <style name="TransparentDialogStyles" parent="BaseDialogStyles">
        <item name="android:windowBackground">@color/app_transparent</item>
        <item name="android:windowContentOverlay">@color/app_transparent</item>
    </style>
</resources>
