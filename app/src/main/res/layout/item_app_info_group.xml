<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="@dimen/app_space_big"
    android:paddingTop="@dimen/app_space_small"
    android:paddingEnd="@dimen/app_space_big"
    android:paddingBottom="@dimen/app_space_small">

    <ImageView
        android:id="@+id/app_info_group_item_icon"
        android:layout_width="@dimen/px_100"
        android:layout_height="@dimen/px_100"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/app_space_small"
        android:layout_toEndOf="@id/app_info_group_item_icon"
        android:orientation="vertical">

        <TextView
            android:id="@+id/app_info_group_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_text_title"
            android:textSize="@dimen/pt30" />

        <TextView
            android:id="@+id/app_info_group_item_package_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/app_text_hint"
            android:textSize="@dimen/pt26" />
    </LinearLayout>
</RelativeLayout>